<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    >

    <ProgressBar
        android:id="@+id/pbProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progress_bar_color_exp"
        android:minHeight="12dip"
        android:maxHeight="12dip"
        android:max="100"
        >
    </ProgressBar>

    <TextView
        android:id="@+id/tvInProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_gravity="start|center"
        android:gravity="start|center"
        android:layout_alignTop="@id/pbProgress"
        android:layout_alignStart="@id/pbProgress"
        android:layout_alignBottom="@id/pbProgress"
        android:background="@android:color/transparent"
        >
    </TextView>

    <TextView
        android:id="@+id/tvInProgressSummaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignTop="@id/pbProgress"
        android:layout_alignStart="@id/pbProgress"
        android:layout_alignEnd="@id/pbProgress"
        android:layout_alignBottom="@id/pbProgress"
        android:background="@android:color/transparent"
        >
    </TextView>

    <TextView
        android:id="@+id/tvInProgressMaxSummaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_gravity="end|center"
        android:gravity="end|center"
        android:layout_alignTop="@id/pbProgress"
        android:layout_alignEnd="@id/pbProgress"
        android:layout_alignBottom="@id/pbProgress"
        android:background="@android:color/transparent"
        >
    </TextView>

</RelativeLayout>

