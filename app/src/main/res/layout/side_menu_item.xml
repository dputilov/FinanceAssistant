<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sideMenuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <ImageView
            android:id="@+id/sideMenuItemTypeImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/sideMenuItemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sideMenuItemTypeImageView"
            android:layout_toStartOf="@+id/sideMenuItemFotoCardView"
            android:text=""
            android:textSize="16sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sideMenuItemFotoCardView"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            card_view:cardCornerRadius="4dp" >

            <ImageView
                android:id="@+id/sideMenuItemFotoImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

</RelativeLayout>
